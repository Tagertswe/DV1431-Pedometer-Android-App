<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/TabFragmentMain_id">

    <TextView
        android:id="@+id/mainView_stepcount2"
        android:layout_gravity="center"
        android:text="80"
        android:textSize="90dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="100px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/mainView_steps_info_text"
        android:layout_gravity="center"
        android:text="Steps"
        android:textSize="30dp"
        android:layout_marginLeft="250px"
        android:layout_width="wrap_content"
        android:layout_marginTop="140px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/mainView_headline"
        android:text="Welcome back"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="400px"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/mainView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_alignRight="@id/mainView_headline"
        android:layout_marginBottom="280px"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/mainView_latest_progress_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="Your latest progress:"
        android:textStyle="italic"
        android:layout_alignRight="@id/mainView_headline"
        android:layout_marginTop="600px"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

</FrameLayout>